[
  {
    "initVariables": {
      "assign": [
        {
          "project": "${sys.get_env(\"GOOGLE_CLOUD_PROJECT_ID\")}"
        },
        {
          "instance": "myinstance1"
        },
        {
          "zone": "us-central1-a"
        }
      ]
    }
  },
  {
    "stopVM": {
      "call": "googleapis.compute.v1.instances.stop",
      "args": {
        "project": "${project}",
        "instance": "${instance}",
        "zone": "${zone}"
      },
      "result": "stopVMResult"
    }
  },
  {
    "last": {
      "return": "${stopVMResult}"
    }
  }
]